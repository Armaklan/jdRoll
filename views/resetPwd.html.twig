{% extends "squelette.html.twig" %}

{% block content %}

<div style="margin-top: 3em"></div>
	{% if (error != "") %}
	    <div class="alert alert-error">
	    	{{ error }}
	    </div>
    {% endif %}
	{% if (warning != "") %}
	<div class="alert alert-warning">
	    	{{ warning }}
	    </div>	
	{% endif %}
	{% if (warning == "" or error != "") %}
	<form role="form" class="form-horizontal" action="{{ path('reset_asked')  }}" method="POST">
	    <div class="form-group">
		    <label class="control-label" for="login">Login</label>
		    <div class="form-control">
		    	<input type="text" id="login" name="login" placeholder="Nom d'utilisateur">
		    </div>
	    </div>
	    
	    <div class="form-group">
		    <div class="form-control">
			    <button type="submit" class="btn">Valider</button>
		    </div>
	    </div>
    </form>
	{% endif %}
	{% if changePwd is defined and changePwd == 1 %}
	   <form role="form" class="form-horizontal" action="{{ path('reset_pwd')  }}" method="POST">
		<h3>Changement de mot de passe</h3>
	    <div class="form-group">
		    <label class="control-label" for="password">Mot de passe</label>
		    <div class="form-control">
		    	<input type="password" id="password" name="password" placeholder="Mot de passe">
		    </div>
	    </div>
	    <div class="form-group">
		    <label class="control-label" for="password2">Mot de passe (resaisir) </label>
		    <div class="form-control">
		    	<input type="password" id="password2" name="password2" placeholder="Mot de passe">
		    </div>
	    </div>
	    
	    <div class="form-group">
		    <div class="form-control">
			    <button type="submit" class="btn btn-danger">Changer le mot de passe</button>
		    </div>
	    </div>
		<input type="hidden" id="alea" name="alea" value='{{ alea }}'>
    </form>
    {% endif %}

{% endblock %}
