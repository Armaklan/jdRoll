{% extends "squelette.html.twig" %}

{% block content %}

	{% if (error != "") %}
	    <div class="alert alert-error">
	    	{{ error }}
	    </div>
    {% endif %}

    <table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Nom de la campagne</th>
				<th>Univers de la campagne</th>
				<th>Syst√®me de jeu</th>
				<th>Nb Joueurs</th>
				<th>MJ</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		{% for campagne in campagnes %}
			<tr>
				<td><a href="{{ path('campagne', {id : campagne.id}) }}">{{ campagne.name }}</a></td>
				<td>{{ campagne.univers }}</td>
				<td>{{ campagne.systeme }}</td>
				<td>{{ campagne.nb_joueurs }}</td>
				<td>{{ campagne.username }}</td>
				<td><a href="" class="btn btn-primary"><i class="icon-share"></i> Rejoindre la partie</a></td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

{% endblock %}