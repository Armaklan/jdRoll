{% extends "squelette.html.twig" %}

{% block content %}

	<div style="margin-top: 3em"></div>
	{% if (error != "") %}
	    <div class="alert alert-error">
	    	{{ error }}
	    </div>
    {% endif %}
	<form role="form" class="form-horizontal" action="{{ path('login_connect')  }}" method="POST">
	    <div class="form-group">
		    <label class="control-label" for="login">Login</label>
		    <div class="form-control">
		    	<input type="text" id="login" name="login" placeholder="Nom d'utilisateur">
		    </div>
	    </div>
	    <div class="form-group">
		    <label class="control-label" for="pass">Mot de passe</label>
		    <div class="form-control">
		    	<input type="password" id="pass" name="pass" placeholder="Mot de passe">
		    </div>
	    </div>
	    <input type="hidden" name="url" value="{{ url }}" />
	    
	    <div class="form-group">
		    <div class="form-control">
			    <button type="submit" class="btn">Se connecter</button>
			    <a href="{{ path('subscribe') }}" class="btn">S'inscrire</a>
		    </div>
	    </div>
		<div class="form-group">
		  <div class="form-control">
    		<a href="{{path('reset')}}">J'ai oubli√© mon mot de passe</a>
			</div>
    	</div>
    </form>

{% endblock %}
