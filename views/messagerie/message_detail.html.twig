{% extends 'squelette.html.twig' %}

{% block content %}

	<table class="table table-striped" width="100%">
			<tr>
				<td width="100px">De</td>
				<td>{{ message.from_username }}</td>
			</tr>
			<tr>
				<td width="100px">A</td>
				<td>{{ message.to_usernames }}</td>
			</tr>
			<tr>
				<td width="100px">Sujet</td>
				<td>{{ message.title }}</td>
			</tr>
			<tr>
				<td width="100px">Contenu</td>
				<td>
				{% autoescape false %}
					{{ message.content }}
				{% endautoescape %}
				</td>
			</tr>
                        {% if message.from_id != 0 %}
			<tr>
				<td colspan="2">
				<form class="form-horizontal" action="{{ path('messagerie_send')  }}" method="POST">
				    <div class="control-group">
					    <label class="control-label" for="to_usernames">Destinataires :</label>
					    <div class="controls">
					    	<input type="text" id="to" name="to_usernames" placeholder="">
					    </div>
				    </div>
					<div class="control-group">
					    <div class="controls">
					    	<input type="hidden" name="id" value="">
							<input type="hidden" name="from_id" value="{{ app.session.get('user').id }}">
							<input type="hidden" name="from_username" value="{{ app.session.get('user').login }}">
							<input type="hidden"  name="title" value="{{ message.title }}">
					    	<textarea input class="input-xxlarge wysiwyg" type="text" id="content" name="content" 
					    		 placeholder="Texte de votre message" rows="10"></textarea>
					    </div>
				    </div>
				       
				    <div class="control-group">
					    <div class="controls">
						    <button type="submit" class="btn btn-primary">RÃ©pondre</button>
					    </div>
				    </div>
				</form>
				</td>
			</tr>
                        {% endif %}
	</table>

	
    <script>

    	$('#to').magicSuggest({
    	    resultAsString: true,
    	    width: 500,
    	    value: [ {% autoescape false %} {{ message.to_usernames_form }} {% endautoescape %}],
    	    data: '{{ list_username }}'
    	});
         
    </script>
{% endblock %}