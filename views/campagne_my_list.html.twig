{% extends "squelette.html.twig" %}

{% block content %}

	{% if (error != "") %}
	    <div class="alert alert-error">
	    	{{ error }}
	    </div>
    {% endif %}

    <table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Nom de la campagne</th>
				<th>Univers de la campagne</th>
				<th>Système de jeu</th>
				<th>Nb Joueurs</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		{% for campagne in campagnes %}
			<tr>
				<td><a href="{{ path('forum_campagne', {campagne_id: campagne.id}) }}}">{{ campagne.name }}</a></td>
				<td>{{ campagne.univers }}</td>
				<td>{{ campagne.systeme }}</td>
				<td>{{ campagne.nb_joueurs_actuel }} / {{ campagne.nb_joueurs }}</td>
				<td><a href="{{ path('campagne_edit', {id : campagne.id}) }}" class="btn btn-primary"><i class="icon-edit"></i> Editer</a></td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Nom de la campagne</th>
				<th>Univers de la campagne</th>
				<th>Système de jeu</th>
				<th>MJ</th>
				<th>Nb Joueurs</th>
			</tr>
		</thead>
		<tbody>
		{% for campagne in campagnes_pj %}
			<tr>
				<td><a href="{{ path('forum_campagne', {campagne_id: campagne.id}) }}">{{ campagne.name }}</a></td>
				<td>{{ campagne.univers }}</td>
				<td>{{ campagne.systeme }}</td>
				<td><a href="{{ path('profile', {username : campagne.username}) }}">{{ campagne.username }}</a></td>
				<td>
					<a href="{{ path('perso_edit', {campagne_id: campagne.id}) }}" class="btn"><i class="icon-tasks"></i> Personnages</a>
					<a href="{{ path('forum_campagne', {campagne_id: campagne.id}) }}" class="btn"><i class="icon-comment"></i> Forum</a>
					<a href="{{ path('campagne_quit', {id : campagne.id}) }}" class="btn btn-danger"><i class="icon-remove"></i> Quitter</a>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

{% endblock %}