{% extends "squelette_campagne.html.twig" %}

{% block content %}

	{% if (error != "") %}
	    <div class="alert alert-error">
	    	{{ error }}
	    </div>
    {% endif %}

	<form class="form-horizontal" action="{{ path('topic_save', {campagne_id : campagne_id}) }}" method="POST">
		<input type="hidden" name="id" value="{{ topic.id }}" >
		<input type="hidden" name="section_id" value="{{ topic.section_id }}" >
	    <div class="control-group">
		    <label class="control-label" for="title">Title</label>
		    <div class="controls">
		    	<input type="text" id="title" name="title" placeholder="Titre du sujet" value="{{ topic.title }}">
		    </div>
	    </div>
	    <div class="control-group">
		    <label class="control-label" for="ordre">NÂ°Ordre</label>
		    <div class="controls">
		    	<input type="text" id="ordre" name="ordre" placeholder="Place dans l'ordre" value="{{ topic.ordre }}">
		    </div>
	    </div>	
	    <div class="control-group">
		    <label class="control-label" for="stickable">Type</label>
		    <div class="controls">
		    	<input type="radio" name="stickable" value="0" {% if topic.stickable == 0 %} checked {% endif %}> Fils standard
				<input type="radio" name="stickable" value="1" {% if topic.stickable == 1 %} checked {% endif %}> Post-it
		    </div>
	    </div>  
	    <div class="control-group">
		    <label class="control-label" for="is_closed">Etat</label>
		    <div class="controls">
		    	<input type="radio" name="is_closed" value="0" {% if topic.is_closed == 0 %} checked {% endif %}> Ouvert
				<input type="radio" name="is_closed" value="1" {% if topic.is_closed == 1 %} checked {% endif %}> Verrouiller
		    </div>
	    </div>   
	    <div class="control-group">
		    <div class="controls">
			    <button type="submit" class="btn btn-primary">Sauvegarder</button>
		    </div>
	    </div>
    </form>

{% endblock %}