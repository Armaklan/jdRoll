{% extends "squelette_campagne.html.twig" %}

{% block content %}

	{% if (error != "") %}
	    <div class="alert alert-error">
	    	{{ error }}
	    </div>
    {% endif %}

	<form class="form-horizontal" action="{{ path('topic_save', {campagne_id : campagne_id}) }}" method="POST">
		<input type="hidden" name="id" value="{{ topic.id }}" >
	    <div class="control-group">
		    <label class="control-label" for="title">Title</label>
		    <div class="controls">
		    	<input type="text" id="title" name="title" placeholder="Titre du sujet" value="{{ topic.title }}">
		    </div>
	    </div>
	    <div class="control-group">
	    	<label class="control-label"  for="section_id">Catégories</label>
			<div class="controls">
				
				<select name="section_id" >
				 {% for section in sections %}
					 <option value="{{ section.id }}" {% if section.id == topic.section_id %} SELECTED="SELECTED" {% endif %}>
					 	{{ section.title }}</option>
				 {% endfor %}
				</select>
			</div>
		</div>
	    <div class="control-group">
		    <label class="control-label" for="ordre">N°Ordre</label>
		    <div class="controls">
		    	<input type="text" id="ordre" name="ordre" placeholder="Place dans l'ordre" value="{{ topic.ordre }}">
		    </div>
	    </div>	
	    <div class="control-group">
		    <label class="control-label" for="stickable">Type</label>
		    <div class="controls">
		    	<input type="radio" name="stickable" value="0" {% if topic.stickable == 0 %} checked {% endif %}> Fils standard
				<input type="radio" name="stickable" value="1" {% if topic.stickable == 1 %} checked {% endif %}> Post-it
		    </div>
	    </div>  
	    <div class="control-group">
		    <label class="control-label" for="is_closed">Etat</label>
		    <div class="controls">
		    	<input type="radio" name="is_closed" value="0" {% if topic.is_closed == 0 %} checked {% endif %}> Ouvert
				<input type="radio" name="is_closed" value="1" {% if topic.is_closed == 1 %} checked {% endif %}> Verrouiller
		    </div>
	    </div>
	    <fieldset>
	    <legend>Accessibilité</legend>
	  	<div class="control-group">
		    <label class="control-label" for="is_private">Accessibilité du sujet</label>
		    <div class="controls">
		    	<input type="radio" name="is_private" value="0" {% if topic.is_private == 0 %} checked {% endif %}> Public
				<input type="radio" name="is_private" value="1" {% if topic.is_private == 1 %} checked {% endif %}> Privée
                                <input type="radio" name="is_private" value="2" {% if topic.is_private == 2 %} checked {% endif %}> Grand-Public
		    </div>
		</div>
		<div class="control-group">
			<div class="controls">
			    <select multiple name="list_user[]" />
			    {% for perso in persos %}
			    		<option value="{{ perso.user_id }}" {% if perso.cr_user != null %} SELECTED="SELECTED" {% endif %}>
			    			{{ perso.name }} ({{ perso.username }})
			    		</option>
			    {% endfor %}
			    </select>
		    </div>
	    </div>  
	    </fieldset> 
	       
	    <div class="control-group">
		    <div class="controls">
			    <button type="submit" class="btn btn-primary">Sauvegarder</button>
		    </div>
	    </div>
    </form>

{% endblock %}