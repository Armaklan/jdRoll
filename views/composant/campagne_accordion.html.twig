<div class="panel-group" id="accordion2">
  <div class="">
    <div class="panel-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
        Personnages
      </a>
    </div>
    <div id="collapseOne" class="panel-collapse collapse in">
      <div class="panel-body">
        <ul class="nav nav-pills nav-stacked">
           {% for perso in allPerso %}
              {% if is_mj %}
                <li><a href="{{ path('perso_view_all_mj', {perso_id : perso.id, campagne_id: campagne_id}) }}">{{ perso.name }} ({{ perso.username }})</a></li>
              {% else %}
                {% if perso.username == app.session.get('user')['login'] %}
                  <li><a id='myPerso' href="#!">{{ perso.name }} ({{ perso.username }})</a></li>
                {% else %}
                  <li>
                    <a href="{{ path('perso_view', {perso_id : perso.id, campagne_id: campagne_id}) }}">
                      {{ perso.name }} ({{ perso.username }})
                    </a>
                  </li>
                {% endif %}
              {% endif %}
            {% endfor %}

          </ul>
      </div>
    </div>
  </div>
  {% if config.sidebar_text != "" %}
  <div class="">
    <div class="panel-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
        Informations campagnes
      </a>
    </div>
    <div id="collapseTwo" class="panel-collapse collapse">
      <div class="panel-body">
          {% autoescape false %}
            {{ config.sidebar_text }}
          {% endautoescape %}
      </div>
    </div>
  </div>
  {% endif %} 
</div>