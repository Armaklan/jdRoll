{% if (app.session.get('user') != null)  %}
	<div class="container-fluid hidden-desktop sidebarTop">
	    <div class="row-fluid">
	    	<div class="span3">
	    		<div align="center">
    				<img src="{{ app.session.get('user')['avatar'] }}" width="130px" style="max-width: 130px" class="img-rounded" />
    			</div><p/>
    			<div align="center">
					<a href="{{ path('campagne_my_list') }}" title="Mes Campagnes" class="btn iconeBtn quickLink1"><i class="icon-bookmark"></i></a>
					{{ include("button/forum_btm.html.twig") }}
		            <a href="{{ path('messagerie') }}" title="Messagerie" class="btn iconeBtn quickLink3"><i class="icon-envelope"></i></a>
			    </div><p/>
	    	</div>
	    	<div class="span3">
				<ul class="nav nav-list nav-stacked">
					<li class='nav-header'><b>Partie active (MJ)</b></li>
					{% for campagne in active_campagnes %}
						<li><a
                            href="{{ path('forum_campagne', {campagne_id: campagne.id}) }}"
                            {% if campagne.campagne_alert > 0 %} class="campagne_alert" {% endif %}
                            >
                                {% if campagne.activity > 0 %}
                                    <i class="icon-asterisk"></i>
                                {% endif %}
                                {{campagne.name}}
                            </a>
                        </li>
					{% endfor %}
				</ul>
			</div>
			<div class="span3">
				<ul class="nav nav-list nav-stacked">
					<li class='nav-header'><b>Partie active (PJ)</b></li>
					{% for campagne in active_pj_campagnes %}
						<li><a
                            href="{{ path('forum_campagne', {campagne_id: campagne.id}) }}"
                            {% if campagne.campagne_alert > 0 %} class="campagne_alert" {% endif %}
                            >
                                {% if campagne.activity > 0 %}
                                    <i class="icon-asterisk"></i>
                                {% endif %}
                                {{campagne.name}}
                            </a>
                        </li>
					{% endfor %}
				</ul>
	    	</div>
			<div class="span3">
				<ul class="nav nav-list nav-stacked">
					<li class='nav-header'><b>Partie favorites</b></li>
					{% for campagne in favorised_campagne %}
						<li><a
                            href="{{ path('forum_campagne', {campagne_id: campagne.id}) }}"
                            {% if campagne.campagne_alert > 0 %} class="campagne_alert" {% endif %}
                            >
                                {% if campagne.activity > 0 %}
                                    <i class="icon-asterisk"></i>
                                {% endif %}
                                {{campagne.name}}
                            </a>
                        </li>
					{% endfor %}
				</ul>
	    	</div>
	    </div>
	</div>
{% endif %}

<div class="span3 sidebar visible-desktop" style="max-width: 300px">

	{% if (app.session.get('user') == null)  %}
	<form class="" action="{{ path('login_connect')  }}" method="POST">
	    <div class="control-group">
		    <div class="controls">
		    	<input type="text" id="login" name="login" placeholder="Nom d'utilisateur">
		    </div>
	    </div>
	    <div class="control-group">
		    <div class="controls">
		    	<input type="password" id="pass" name="pass" placeholder="Mot de passe">
		    	<input type="hidden" name="url" value="!" />
		    </div>
	    </div>
	    <div class="control-group">
		    <div class="controls">
			    <button type="submit" class="btn btn-primary">Se connecter</button>
			    <a href="{{ path('subscribe') }}" class="btn">S'inscrire</a>
		    </div>
	    </div>
    </form>
    {% else %}
    	<div align="center">
    		<img src="{{ app.session.get('user')['avatar'] }}" width="130px" class="img-rounded" />
    	</div>
	    <p/>
	    <div align="center">
			<a href="{{ path('campagne_my_list') }}" title="Mes Campagnes" class="btn iconeBtn quickLink1"><i class="icon-bookmark"></i></a>
			{{ include("button/forum_btm.html.twig") }}
            <a href="{{ path('messagerie') }}" title="Messagerie" class="btn iconeBtn quickLink3"><i class="icon-envelope"></i></a>
	    </div>
	    <p/>
		<ul class="nav nav-list nav-stacked">
			<li class='nav-header'><b>Partie active (MJ)</b></li>
			{% for campagne in active_campagnes %}
                <li><a
                    href="{{ path('forum_campagne', {campagne_id: campagne.id}) }}"
                    {% if campagne.campagne_alert > 0 %} class="campagne_alert" {% endif %}
                    >
                        {% if campagne.activity > 0 %}
							<i class="icon-asterisk"></i>
						{% endif %}
                        {{campagne.name}}
                    </a>
                </li>
			{% endfor %}
		</ul>

		<ul class="nav nav-list nav-stacked">
			<li class='nav-header'><b>Partie active (PJ)</b></li>
			{% for campagne in active_pj_campagnes %}
                <li><a
                    href="{{ path('forum_campagne', {campagne_id: campagne.id}) }}"
                    {% if campagne.campagne_alert > 0 %} class="campagne_alert" {% endif %}
                    >
                        {% if campagne.activity > 0 %}
							<i class="icon-asterisk"></i>
						{% endif %}
                        {{campagne.name}}
                    </a>
                </li>
			{% endfor %}
		</ul>

		<ul class="nav nav-list nav-stacked">
			<li class='nav-header'><b>Partie favorite</b></li>
			{% for campagne in favorised_campagne %}
                <li><a
                    href="{{ path('forum_campagne', {campagne_id: campagne.id}) }}"
                    {% if campagne.campagne_alert > 0 %} class="campagne_alert" {% endif %}
                    >
                        {% if campagne.activity > 0 %}
							<i class="icon-asterisk"></i>
						{% endif %}
                        {{campagne.name}}
                    </a>
                </li>
			{% endfor %}
		</ul>
	{% endif %}
</div>
