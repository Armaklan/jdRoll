{% extends "squelette_campagne.html.twig" %}

{% block content %}

<script type='text/javascript'>
$(function() {

	initFDP($('#zoneFicheCustom'),false);
	
	$('#zoneFicheCustom .editable').editable('toggleDisabled');

	$('.ui-resizable-handle').remove();
});

   
</script>

 <style type='text/css'>
 
.ui-layout-center {
	position: relative;
}

.JDRollDroppedUserControl {
       z-index:1000;
}

.JDRollUserControl {
		display: inline-block;
}

#FakeTD
{
background-color: #f9f9f9;

}
#FakeTD:hover
{
background-color: #f5f5f5;

}



</style>

    <table class="table table-striped table-hover">
		<thead>
			<tr>
				<th colspan="2" style="text-align: right">
						{% if is_mj %}
							<a href="{{ path('perso_edit_mj', {campagne_id: campagne_id, perso_id: perso.id}) }}" class="btn btn-primary iconeBtn sidebarBtn" title="Editer"><i class="icon-edit"></i></a>
						{% else %}
							<a href="{{ path('perso_edit', {campagne_id: campagne_id}) }}" class="btn btn-primary iconeBtn sidebarBtn" title="Editer"><i class="icon-edit"></i> Editer</a>
						{% endif %}
				</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>Nom</td>
				<td>{{ perso.name }}</td>
			</tr>
			<tr>
				<td>Concept</td>
				<td>{{ perso.concept }}</td>
			</tr>
			<tr>
				<td>Avatar</td>
				<td><img src="{{ perso.avatar }}" width="150px" /></td>
			</tr>
			<tr>
				<td>Description public</td>
				<td>{% autoescape false %}{{ perso.publicDescription }}{% endautoescape %}</td>
			</tr>
			<tr>
				<td>Description priv√©e</td>
				<td>{% autoescape false %}{{ perso.privateDescription }}{% endautoescape %}</td>
			</tr>
			<tr>
				<td>Description technique</td>
				<td>{% autoescape false %}{{ perso.technical }}{% endautoescape %}</td>
			</tr>
			
		</tbody>
	</table>
<div class="form-horizontal" id="FakeTD">

		
		<div class="form-group" id='zoneFiche'>
			<label class="control-label" for="template">Fiche de personnage</label>
			<div class="form-control">
			
				<div class="ui-layout-center" id='zoneFicheCustom'>
					{% autoescape false %}{{ perso.template_html }}{% endautoescape %}
					{% autoescape false %}{{ perso.template_fields }}{% endautoescape %}
					{% autoescape false %}{{ perso.perso_fields }}{% endautoescape %}
				</div>
		

			</div>
		</div>


    </div>
{% endblock %}
	